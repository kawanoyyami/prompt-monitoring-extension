{
  "manifest_version": 3,
  "name": "Prompt Monitoring Extension",
  "version": "1.0.0",
  "description": "Monitors ChatGPT prompts for email addresses",
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "prompt-monitor@example.com",
      "strict_min_version": "109.0"
    }
  },
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected-script.js"],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker.js",
    "scripts": ["service-worker.js"],
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
